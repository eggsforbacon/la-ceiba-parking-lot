            <Button mnemonicParsing="false" onAction="#clientsClicked" text="Clientes" />
            <Button mnemonicParsing="false" onAction="#vehiclesClicked" text="Vehículos" />
            <Button mnemonicParsing="false" onAction="#mapClicked" text="Mapa" />
            <Separator opacity="0.0" orientation="VERTICAL" prefHeight="47.0" prefWidth="8.0" />
            <Button mnemonicParsing="false" onAction="#usersClicked" text="Usuarios" />
            <Button mnemonicParsing="false" onAction="#receiptsClicked" text="Facturación" />
            <Button mnemonicParsing="false" onAction="#reportsClicked" text="Reportes" />
            <Separator opacity="0.0" orientation="VERTICAL" prefHeight="22.0" prefWidth="5.0" />
            <Button mnemonicParsing="false" onAction="#exitClicked" text="Salir" />
         </children>
      </VBox>
   </left>
   <center>
      <BorderPane fx:id="currentScene" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="782.0" minWidth="0.0" prefHeight="782.0" styleClass="current-scene" BorderPane.alignment="CENTER">
